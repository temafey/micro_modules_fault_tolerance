{
    "name": "micro-module/fault-tolerance",
    "type": "library",
    "description": "MicroModule Fault Tolerance common library",
    "license": "proprietary",
    "require": {
        "php": "^8.2",
        "ext-amqp": "*",
        "ext-json": "*",
        "ext-redis": "*",
        "micro-module/broadway-saga": "^0.6",
        "micro-module/alerting": "^0.7",
        "micro-module/base": "^0.7",
        "micro-module/saga": "^0.6",
        "broadway/broadway": "^2.3",
        "broadway/event-store-dbal": "^0.5",
        "enqueue/amqp-ext": "^0.10",
        "enqueue/async-command": "^0.10",
        "micro-module/enqueue-bundle": "^0.10",
        "enqueue/fs": "^0.10",
        "micro-module/job-queue": "^0.10"
    },
    "require-dev": {
        "micro-module/null": "^v0.10",
        "php-parallel-lint/php-console-highlighter": "^1.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "mockery/mockery": "^1.6",
        "myclabs/deep-copy": "^1.11",
        "phpmd/phpmd": "^2.15",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-mockery": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^10.5",
        "symfony/phpunit-bridge": "*",
        "symplify/easy-coding-standard": "^12.1",
        "vimeo/psalm": "^5.23"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": {
            "MicroModule\\FaultTolerance\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "MicroModule\\FaultTolerance\\Tests\\Unit\\": "tests/unit"
        }
    }
  }
